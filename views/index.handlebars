{{#if shortURL}}
<div class="result">
    <h3>Success! Please use this link:</h3>
    <p id="generatedURL">{{origin}}/{{shortURL}}</p>
</div>
<button class="copy" onclick="copy()">Copy</button>

<a href="/">
    <button class="back" type="button">Back to Home</button>
</a>


<script>
    function copy() {
        const URL = document.getElementById('generatedURL')
        navigator.clipboard.writeText(URL.innerText)
            .then(() => alert('copied'))
            .catch(error => console.log(error))
    }
</script>
{{else}}
<form action="/" method="POST">
    <div class="container">
        <input type="url" name="url" placeholder="Input URL here" style="vertical-align: middle;" required />
        <button type="submit" class="shorten btn btn-primary">Shorten</button>
    </div>
</form>
{{/if}}