<form action="/" method="POST">
  <div>
    <input type="url" id="url" name="url" placeholder="Input URL here" required />
  </div>

  <div>
    <button type="submit" class="btn">Shorten</button>
  </div>

</form>

{{#if shortURL}}
<div class="result">
  <h3>Success! Please use this link:</h3>
  <p id="generatedURL"></p>
  <button class="copy" onclick="copy()">Copy</button>
</div>

{{/if}}